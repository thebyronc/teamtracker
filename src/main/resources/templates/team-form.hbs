{{#partial "content"}}

    {{#if editTeam}}
    <h2>EDIT TEAM</h2>
    <form action="/teams/{{editTeam.id}}/update" method="post" class="w3-container w3-card w3-padding-32 w3-white">
    <div class="w3-section">
        <label for="teamName">New team name:</label>
        <input class="w3-input" id="teamName" name="teamName" type="text" value="{{editTeam.teamName}}">
    </div>
        <button type="submit" class="w3-btn btn-color">Update Team!</button>
    </form>
    {{else}}
    <h2>ADD NEW TEAM</h2>
    <form action="/teams/new" method="post" class="w3-container w3-card w3-padding-32 w3-white">
        <div class="w3-section">
            <label for="teamName">Team Name</label>
            <input class="w3-input" id="teamName" name="teamName" type="text">
        </div>
        <div class="w3-section">
            <label for="members">Team Members(Separate each member by a ",").</label>
            <input class="w3-input" id="members" name="members" type="text">
        </div>
        <div class="w3-section">
            <label for="description">Team Description</label>
            <input class="w3-input" id="description" name="description" type="text">
        </div>
        <button type="submit" class="w3-btn btn-color">Create Team!</button>
    </form>
    {{/if}}

{{/partial}}

{{> layout.hbs}}